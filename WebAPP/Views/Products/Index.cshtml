                @Html.DisplayFor(modelItem => item.Tamanho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cod_Produto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cod_Produto">Details</a> |
